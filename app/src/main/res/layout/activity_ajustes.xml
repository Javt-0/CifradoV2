<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Ajustes">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="332dp"
        android:layout_height="70dp"
        android:fontFamily="@font/alegreya_sans_sc_bold_italic"
        android:text="Ajustes del cifrado"
        android:textAlignment="center"
        android:textSize="38sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.108" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="332dp"
        android:layout_height="165dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.332">

        <RadioButton
            android:id="@+id/btnCesar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya_sans_sc_bold_italic"
            android:text="Cifrado Cesar"
            android:textColor="#070707"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/btnPares"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya_sans_sc_bold_italic"
            android:text="Intercambio de Pares"
            android:textColor="#070707"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/btnClave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya_sans_sc_bold_italic"
            android:text="Mediante contraseÃ±a"
            android:textColor="#070707"
            android:textSize="20sp" />

    </RadioGroup>

    <Switch
        android:id="@+id/swichBtn"
        android:layout_width="294dp"
        android:layout_height="47dp"
        android:clickable="false"
        android:fontFamily="@font/alegreya_sans_sc_bold_italic"
        android:text="Cifrar mientras escribe"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.576" />
</androidx.constraintlayout.widget.ConstraintLayout>